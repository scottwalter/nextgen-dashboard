{
  "name": "nextgen-bitaxe-dashboard",
  "version": "2.0.0",
  "description": "Next Generation Bitaxe Dashboard - Vue.js SPA with real-time monitoring",
  "main": "src/backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "nodemon src/backend/server.js",
    "frontend:dev": "cd src/frontend && npm run dev",
    "frontend:build": "cd src/frontend && npm run build",
    "start": "node src/backend/server.js",
    "build": "npm run frontend:build && npm run docker:build",
    "docker:build": "docker build -t nextgen-bitaxe-dashboard .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/config:/app/config nextgen-bitaxe-dashboard"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "axios": "^1.5.0",
    "helmet": "^7.0.0",
    "ws": "^8.14.2",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["bitaxe", "mining", "dashboard", "vue", "cryptocurrency"],
  "author": "Scott Walter",
  "license": "MIT"
}